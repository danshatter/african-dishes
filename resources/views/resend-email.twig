{% extends "layouts/app.twig" %}

{% block title %}Resend Email{% endblock %}

{% block content %}
    <div class="main-content">
        <div class="auth-sect">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 mx-auto">
                        <div class="sign-auth">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <p class="text-center"><img src="/images/logo.png" class="img-fluid" width="80%" /></p>
                                    <hr/>
                                    {% if flash.hasMessage('already-at-recovery') %}
                                        <h6 class="error text-center text-uppercase">{{ flash.getMessage('already-at-recovery') | first }}</h6>
                                    {% endif %}

                                    {% if flash.hasMessage('not-in-recovery') %}
                                        <h6 class="error text-center text-uppercase">{{ flash.getMessage('not-in-recovery') | first }}</h6>
                                    {% endif %}

                                    {% if flash.hasMessage('resend-email-success') %}
                                        <h6 class="success text-center text-uppercase">{{ flash.getMessage('resend-email-success') | first }}</h6>
                                    {% endif %}
                                    
                                    {% if flash.hasMessage('resend-email-error') %}
                                        <h6 class="error text-center text-uppercase">{{ flash.getMessage('resend-email-error') | first }}</h6>
                                    {% endif %}
                                    <form action="{{ url_for('resend-email') }}" method="POST" class="submit-form">
                                        <div class="form-group">
                                            <label>Email Address</label>
                                            <input type="text" name="email" value="{{ old.email }}" class="form-control form-control-lg" placeholder="Email" required/>
                                            {% if errors.email %}
                                                <small class="error">{{ errors.email | first }}</small>
                                            {% endif %}
                                        </div>
                                        {{ csrf | raw }}
                                        <div class="form-group">
                                            <button class="btn btn-main btn-block btn-lg" type="submit">Resend Email</button>
                                        </div>
                                    </form>
                                    <p class="text-center"><small class="text-muted">Go to <a href="{{ url_for('home') }}">Login</a> page</small></p>
                                    <p class="text-center"><small class="text-muted">Go back to <a href="{{ url_for('forgotten-password') }}">Forgotten Password</a> page</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}