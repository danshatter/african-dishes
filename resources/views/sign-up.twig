{% extends "layouts/app.twig" %}

{% block title %}Register{% endblock %}

{% block content %}
<div class="main-content">
	<div class="auth-sect py-5">
		<div class="container">
			<div class="row">
				<div class="col-lg-5 mx-auto">
					<div class="sign-auth">
						 <div class="card mb-4">
							 <div class="card-body">
							      <p class="text-center"><img src="/images/logo.png" class="img-fluid" width="300" /></p>
                                    <hr/>
								 <form action="{{ url_for('sign-up') }}" method="POST" class="submit-form">
									<div class="form-group">
										<label>First Name</label>
										<input type="text" name="first_name" class="form-control form-control-lg" placeholder="First Name" value="{{ old.first_name }}" required/>
										{% if errors.first_name %}
											<small class="error">{{ errors.first_name | first }}</small>
										{% endif %}
									</div>
									<div class="form-group">
										<label>Last Name</label>
										<input type="text" name="last_name" class="form-control form-control-lg" placeholder="Last Name" value="{{ old.last_name }}" required/>
										{% if errors.last_name %}
											<small class="error">{{ errors.last_name | first }}</small>
										{% endif %}
									</div>
									<div class="form-group">
										<label>Username</label>
										<input type="text" name="username" class="form-control form-control-lg" placeholder="Username" value="{{ old.username }}" required/>
										{% if errors.username %}
											<small class="error">{{ errors.username | first }}</small>
										{% endif %}
									</div>
									<div class="form-group">
										<label>Email Address</label>
										<input type="email" name="email" class="form-control form-control-lg" placeholder="Email" value="{{ old.email }}" required/>
										{% if errors.email %}
											<small class="error">{{ errors.email | first }}</small>
										{% endif %}
									</div>
									<div class="form-group">
										<label>Password</label>
										<input type="password" name="password" class="form-control form-control-lg" required/>
										{% if errors.password %}
											<small class="error">{{ errors.password | first }}</small>
										{% endif %}
									</div>
									<div class="form-group">
										<label>Confirm Password</label>
										<input type="password" name="confirm_password" class="form-control form-control-lg" required/>
										{% if errors.confirm_password %}
											<small class="error">{{ errors.confirm_password | first }}</small>
										{% endif %}
									</div>
									<div class="form-group">
										<button class="btn btn-main btn-block btn-lg" type="submit">Sign Up</button>
									</div>

									{{ csrf | raw }}
								</form>
								{#<p class="text-center"><small>By signing up, you agree to our <br/><strong><a href="#">Terms of Service</a></strong> and <strong><a href="#">Privacy Policy</a>.</strong></small></p>#}
								<p class="text-center"><small class="text-muted ">I have an account? <a href="{{ url_for('sign-in') }}">Log In</a></small></p>
							 </div>
						 </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}

