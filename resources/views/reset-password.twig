{% extends "layouts/app.twig" %}

{% block title %}Reset Password{% endblock %}

{% block content %}
    <div class="main-content">
        <div class="auth-sect">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 mx-auto">
                        <div class="sign-auth">
                            <div class="card mb-4">
                                <div class="card-body">
                                     <p class="text-center"><img src="/images/logo.png" class="img-fluid" width="300" /></p>
                                    <hr/>
                                    <form action="{{ url_for('reset-password') }}" method="POST" class="submit-form">
                                        <div class="form-group">
                                            <label>New Password</label>
                                            <input type="password" name="password" class="form-control form-control-lg" placeholder="Password" required/>
                                            {% if errors.password %}
                                                <small class="error">{{ errors.password | first }}</small>
                                            {% endif %}
                                        </div>
                                        <div class="form-group">
                                            <label>Confirm New Password</label>
                                            <input type="password" name="confirm_password" class="form-control form-control-lg" placeholder="Confirm Password" required/>
                                            {% if errors.confirm_password %}
                                                <small class="error">{{ errors.confirm_password | first }}</small>
                                            {% endif %}
                                        </div>
                                        {{ csrf | raw }}
                                        <input type="hidden" name="_METHOD" value="PUT">
                                        <div class="form-group">
                                            <button class="btn btn-main btn-block btn-lg" type="submit">Add New Password</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}